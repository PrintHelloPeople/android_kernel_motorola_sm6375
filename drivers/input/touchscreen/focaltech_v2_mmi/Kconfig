#
# Focaltech Touchscreen driver configuration
#

config TOUCHSCREEN_FOCALTECH_V2_MMI
	tristate "Moto Focaltech Touchscreen"
	depends on I2C
	default n
	help
	  Say Y here if you have Moto Focaltech touch panel.
	  If unsure, say N.

config TOUCHSCREEN_FOCALTECH_V2_MMI_GESTURES
	bool "Moto Focaltech Gestures"
	depends on TOUCHSCREEN_FOCALTECH_V2_MMI && INPUT_TOUCHSCREEN_MMI
	default n
	help
	  Say Y here to enable support for Moto gestures functionality.
	  If unsure, say N.

config TOUCHSCREEN_FOCALTECH_V2_MMI_ENABLE_DOUBLE_TAP
	bool "Moto Focaltech Double tap"
	depends on TOUCHSCREEN_FOCALTECH_V2_MMI
	default n
	help
	  Say Y here to enable support for double tap functionality on Focaltech touch panel.
	  If unsure, say N.

config TOUCHSCREEN_FOCALTECH_V2_MMI_ENABLE_PALM
	bool "Moto Focaltech Palm"
	depends on TOUCHSCREEN_FOCALTECH_V2_MMI
	default n
	help
	  Say Y here to enable support for Palm functionality on Focaltech touch panel.
	  If unsure, say N.

config TOUCHSCREEN_FOCALTECH_V2_MMI_PEN_NOTIFIER
	bool "Moto Focaltech Pen notifier"
	depends on TOUCHSCREEN_FOCALTECH_V2_MMI
	default n
	help
	  Say Y here to enable support for Pen notifier functionality on Focaltech touch panel.
	  If unsure, say N.

config TOUCHSCREEN_DRM_PANEL_NOTIFICATIONS
	bool "Moto Focaltech drm panel notifications"
	depends on TOUCHSCREEN_FOCALTECH_V2_MMI
	default n
	help
	  Say Y here to enable support for Pen notifier functionality on Focaltech touch panel.
	  If unsure, say N.
